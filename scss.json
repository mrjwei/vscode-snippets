{
	// Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Psuedo before elements": {
		"prefix": "psb",
		"body": [
			"&::before {",
			"\tcontent: '';",
			"\tdisplay: block;",
			"\tposition: absolute;",
			"\twidth: $1;",
			"\theight: $2;",
			"\tbackground: $3;",
			"}"
		],
		"description": "Psuedo before elements"
	},
	"Psuedo after elements": {
		"prefix": "psa",
		"body": [
			"&::after {",
			"\tcontent: '';",
			"\tdisplay: block;",
			"\tposition: absolute;",
			"\twidth: $1;",
			"\theight: $2;",
			"\tbackground: $3;",
			"}"
		],
		"description": "Psuedo after elements"
	},
	"Map get margin": {
		"prefix": "mgm",
		"body": "map-get(\\$margins, $1)",
		"description": "Map get margin"
	},
	"Map get padding": {
		"prefix": "mgp",
		"body": "map-get(\\$paddings, $1)",
		"description": "Map get padding"
	},
	"Map get font-size": {
		"prefix": "mgfs",
		"body": "map-get(\\$font-sizes, $1)",
		"description": "Map get font-sizes"
	},
	"Map get color": {
		"prefix": "mgc",
		"body": "map-get(\\$colors, $1)",
		"description": "Map get color"
	},
	"Include responsive": {
		"prefix": "@res",
		"body": [
			"@include responsive($1) {",
			"\t$2",
			"}"
		],
		"description": "Include responsive"
	}
}
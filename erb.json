{
	"erb echo": {
		"prefix": "e",
		"body": "<%= $1 %>$0",
		"description": "erb echo"
	},
	"erb tag": {
		"prefix": "t",
		"body": "<% $1 %>$0",
		"description": "erb tag"
	},
	"erb loop": {
		"prefix": "loop",
		"body": [
			"<% @${1:items}.each do |${2:item}| %>",
			"\t$0",
			"<% end %>"
		],
		"description": "erb loop"
	}
}
